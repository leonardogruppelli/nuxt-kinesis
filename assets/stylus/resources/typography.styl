h1
h2
h3
h4
h5
  text-transform uppercase

h1
h2
h3
  @extend .montserrat
  color $black

h4
h5
  @extend .roboto
  color $grey

h1
  font-weight 900

h2
h3
  font-weight 700

h4
h5
  font-weight 400

h1
  font-size rem(46px)
  +above(l)
    font-size rem(52px)

h2
  font-size rem(40px)
  +above(l)
    font-size rem(46px)

h3
  font-size rem(34px)
  +above(l)
    font-size rem(40px)

h4
  font-size rem(18px)
  +above(l)
    font-size rem(24px)

h5
  font-size rem(10px)
  +above(l)
    font-size rem(16px)

p
  font-size rem(16px)
  color $grey
  +above(l)
    font-size rem(18px)